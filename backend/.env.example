# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5175

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI API (for video generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude API (for code review)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Redis Configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Rate Limits
DAILY_VIDEO_LIMIT=5
DAILY_REVIEW_LIMIT=3

# File Storage
MAX_VIDEO_SIZE=100MB

# Video Generation Configuration
# Set to 'true' for full Manim rendering, 'false' for fast mode (placeholder videos)
ENABLE_VIDEO_RENDERING=true
# Per-slide sync for better audio-video synchronization (enabled by default)
# Set to 'false' for combined mode (faster but less precise)
ENABLE_PERSLIDE_SYNC=true
# AI-enhanced Manim: GPT-4 generates custom animation code per slide
# DISABLED by default due to layout/positioning issues
# Set to 'true' to enable AI generation (experimental, may have overlapping elements)
ENABLE_AI_MANIM=false
